.card {

  +below(m) {
    display: none;
  }

  box-sizing: border-box;
  position: relative;
  width: 500px;
  max-width: 100%;
  min-height: 300px;
  background: #FFF;
  margin: 0 auto;
  padding: 20px;
  padding-bottom: 80px;
  color: #333;

  .stamp {
    position: absolute;
    right: 20px;
    top: 20px;
  }

  .tweet-image {
    display: block;
    margin: 0 auto;
    margin-bottom: 30px;
    max-width: 100%;
    height: auto;
  }

  .text-container {
    padding: 20px;
    font-size: 16px;

    textarea {
      width: 100%;
      height: 130px;
      border: none;
      resize: none;
    }

  }

  .card-footer {
    box-sizing: border-box
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80px;
    padding: 20px 40px;
    text-align: right;
    margin-top: 30px;

    .picture-container {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      width: 55px;

      .author-picture {
        width: 50px;
        height: 50px;
        background-size: cover;
        background-position: center center;
        border-radius: 50%

        align(vertical)
      }
    }

    .details-container {
      display: inline-block;
      vertical-align: top;
      height: 100%;

      .details {
        align(vertical)


        .author {
          display: block;
          color: #555;
          font-size: 0.8em;
        }

        .date {
          display: block;
          color: #aaa;
          font-size: 0.8em;
        }
      }
    }


  }

  .head {
    font-size: 12px;
    margin-top: 10px;
    margin-bottom: 40px;
  }
}
