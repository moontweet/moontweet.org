.loader {
  align()
}

.card {

  &.no-mobile {
    +below(m) {
      display: none;
    }
  }

  box-sizing: border-box;
  position: relative;
  width: 500px;
  max-width: 100%;
  min-height: 300px;
  background: #FFF;
  margin: 0 auto;
  padding: 20px;
  padding-bottom: 80px;
  color: #333;
  border-radius: 3px;

  &.fluo {
    box-shadow: 0 0 20px #29A2FF;
  }

  .stamp {
    position: absolute;
    right: 40px;
    top: 40px;
  }

  .tweet-image, .MediaCard-mediaAsset iframe {
    display: block !important;
    margin: 0 auto !important;
    margin-bottom: 20px !important;
    max-width: 100% !important;
    height: auto !important;

    border: 0 !important;
    position: relative !important;

  }

  .tweet-text {
    padding: 0 10px;

    a {
      color: #0084B4
    }

  }

  .text-container {
    padding: 20px;
    font-size: 16px;
    font-family: "Roboto Slab", Helvetica, Arial, serif;

    textarea {
      width: 100%;
      height: 120px;
      border: none;
      resize: none;
    }

    .Emoji {
      width: 17px;
    }

    .mediacard, .mediacard-media {
      width: 100%;

      * {
        height: auto;
        padding-bottom: 0;
      }
    }

  }

  .pd-0 {
    padding: 0;
  }

  .card-footer {
    box-sizing: border-box
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80px;
    padding: 10px 40px;
    text-align: right;
    margin-top: 30px;

    .picture-container {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      width: 50px;

      .author-picture {
        width: 40px;
        height: 40px;
        background-size: cover;
        background-position: center center;
        border-radius: 50%

        align(vertical)
      }
    }

    .details-container {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      width: calc(100% - 50px - 70px - 10px) // 100% - picture-container - share-container - a little space

      .details {
        align(vertical)
        position: relative

        .author {
          display: block;
          color: #555;
          font-size: 0.8em;
        }

        .date {
          display: block;
          color: #aaa;
          font-size: 0.8em;
        }
      }
    }

    .share-container {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      width: 70px;
      text-align: right;

      img {
        width: 25px;
        position: relative;
        top: 50%;
        transform: translateY(-50%)
      }
    }

  }

  .card-footer-show {
    padding: 20px 30px;
    height: 100px;
  }

  .head {
    font-size: 13px;
    margin-top: 10px;
    margin-bottom: 40px;
  }
}

.card-show {
  padding-bottom: 110px;
  width: 380px;
}