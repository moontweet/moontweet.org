header {
  +below(m) {
    height: $mobile-header-height
    padding: $mobile-layout-margin;

    .stamp {
      float: right;
      margin-top: 20px;
    }
  }

  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: $header-height;
  padding: $layout-margin;
  z-index: 99;

  .left {
    col(2 / 3);
    height: $header-height;

    +below(m) {
      height: $mobile-header-height
    }

    .moontweet {
      line-height: $header-height;

      +below(m) {
        line-height: $mobile-header-height
      }

      .menu-icon {
        font-size: 2.1rem;
        align(vertical)
      }


      .claim {
        margin-left: 20px;
        font-size: 0.8rem;
      }

      .logo {
        padding: 30px 0;
        width: 180px;

        +below(m) {
          padding: 20px 0;
        }
      }
    }

    ul.nav {
      display: inline-block;
      vertical-align: top;
      list-style: none;
      margin: 0;
      padding: 0;
      font-family: monospace;
      margin-left: 30px;


      li {
        float: left;
        margin-right: 10px;

        a:hover {
          text-decoration underline;
        }
      }
    }
  }

  .right {
    col(1 / 3);
    position: relative;
    height: $header-height;

    +below(m) {
      height: $mobile-header-height

      img {
        align(vertical)
        right: 0;
        width: 30px;
      }

    }

    .nav, .button {
      align(vertical)
      right: 0;

      span {
        margin: 20px;
        color: $twitter-color
      }
    }


  }

}