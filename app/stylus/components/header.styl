header {
  +below(m) {
    height: $mobile-header-height
    padding: $mobile-layout-margin;

    .stamp {
      float: right;
      margin-top: 20px;

      path {
        fill: white;
      }
    }
  }

  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: $header-height;
  padding: $layout-margin;
  z-index: 99;

  .left {
    col(2 / 3);
    height: $header-height;

    +below(m) {
      height: $mobile-header-height
    }

    .moontweet {
      line-height: $header-height;

      +below(m) {
        line-height: $mobile-header-height
      }

      .menu-icon {
        font-size: 2.1rem;
        align(vertical)
      }

      .title {
        font-family: $secondary-font;
        font-size: 2.5rem;
        font-weight: 300;

        +below(m) {
          font-size: 2rem;
          font-weight: 300;
        }
      }

      .claim {
        margin-left: 20px;
        font-size: 0.8rem;
      }
    }

    ul.nav {
      display: inline-block;
      vertical-align: top;
      list-style: none;
      margin: 0;
      padding: 0;
      font-family: monospace;
      margin-left: 30px;


      li {
        float: left;
        margin-right: 10px;

        a:hover {
          text-decoration underline;
        }
      }
    }
  }

  .right {
    col(1 / 3);
    position: relative;
    height: $header-height;

    +below(m) {
      height: $mobile-header-height

      img {
        align(vertical)
        right: 0;
        width: 30px;
      }

    }

    .button {
      align(vertical)
      right: 0;
    }


  }

}