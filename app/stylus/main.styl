html, body {
  background: $background;
  color: $text-color;
  font-family: $primary-font
  height: 100%;
  margin: 0;
  padding: 0;
}

a {
  color: inherit;
  text-decoration: none;
}

[ng-click], [ui-sref] {
  cursor: pointer
}

input:focus,
select:focus,
textarea:focus,
button:focus {
  outline: none;
}

.hidden {
  display: none !important;
}

+above(m) {
  .mobile {
    display: none;
  }

  .desktop {
    display: block;
    height: 100%;
  }

  .above-footer {
    position: absolute;
    align(horizontal)
    bottom: 60px;
  }

}


+below(m) {
  .mobile {
    display: block;
    height: 100%;
  }

  .desktop {
    display: none;
  }

}

.container {
  box-sizing: border-box;
  padding: $layout-margin;
  height: 100%;

  +below(m) {
    padding: 0 20px;
  }
}

.above {
  position: relative;
  box-sizing: border-box;
  padding-top: $header-height * 2;
  +below(m) {
    padding-top: $mobile-header-height * 2;
  }
  height: 100vh;
}

.mono-text {
  font-family: $secondary-font;
  font-weight: 100;
  letter-spacing: 1px;
}


.absolute-center {
  align()
