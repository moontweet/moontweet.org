.screen {
  padding: 0;

  .left {

    span(1 / 2)
    position: relative
    height: 100%;
    overflow: hidden;

    img {
      display: none;
    }

    +below(4) {
      span(1)
      height: auto

      img {
        display: block;
        margin: 0 auto;
      }
    }

    .scrollable {
      overflow-y: auto;
      height: 100%
      width: 100%;
      padding-right: 15px;
    }

    .page-box {
      position: relative
      box-sizing: border-box
      padding: 20px;
      height: 100%;

      .content {
        +above(m) {
          align(vertical)
        }

      }
    }

  }

  .right {
    span(1 / 2)
    height: 100%;
    overflow-y: hidden;

    +below(4) {
      display: none;
    }

    .slide-box {
      position: relative
      box-sizing: border-box
      padding: 20px;
      height: 100%;

      img {
        align(center)
      }
    }
  }

}

.footer {
  padding-bottom: 30px;

  i {

    +below(m) {
      font-size: 1.5rem;
    }

    margin-right: 10px;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    margin-top: 20px;

    li {
      float: left;
      margin-right: 10px;
      font-family: "Cutive Mono"
    }
  }
}
